# SIGNAL_PRE_CLOSE_SECONDS=4
# SIGNAL_HISTORY_CANDLES=300

# Volatility Thresholds (optional)
# VOLATILITY_ATR_THRESHOLD=0.005
# VOLATILITY_TICK_THRESHOLD=0.003

# Logging Configuration
# LOG_LEVEL=info
